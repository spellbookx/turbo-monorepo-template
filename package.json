{
  "name": "root",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "fmt": "pnpm dlx prettier --ignore-unknown --write .",
    "lint": "pnpm dlx eslint --no-warn-ignored --fix .",
    "lint:fmt": "pnpm run lint && pnpm run fmt",
    "prepare": "lefthook install",
    "release": "LEFTHOOK=\"0\" release-it"
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@cspell/cspell-types": "^9.6.2",
    "@prettier/plugin-xml": "^3.4.2",
    "@release-it/conventional-changelog": "^10.0.4",
    "@turbo/gen": "^2.8.1",
    "commitizen": "^4.3.1",
    "commitlint-config-spellbookx": "*",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cspell": "^9.6.2",
    "cspell-config-spellbookx": "^0.7.1",
    "eslint": "^9.39.2",
    "eslint-plugin-spellbookx": "^0.7.1",
    "lefthook": "^2.0.15",
    "prettier": "^3.7.4",
    "prettier-config-spellbookx": "^0.7.1",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-ini": "^1.3.0",
    "prettier-plugin-packagejson": "^3.0.0",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-properties": "^0.3.1",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prettier-plugin-toml": "^2.0.6",
    "release-it": "^19.2.4",
    "turbo": "^2.7.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
